{
  "name": "@romeobravo/apollo-koa",
  "version": "1.0.0",
  "description": "GraphQLServer implementation on koa",
  "main": "build/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "dev": "nodemon -e ts,graphql -x ts-node src/app.ts",
    "prestart": "npm run build",
    "start": "node build/app.js",
    "deploy": "npm run deploy:prisma && npm run deploy:koa",
    "deploy:prisma": "prisma deploy",
    "postdeploy:prisma": "npm run generate",
    "deploy:prisma:staging": "dotenv -e .env.staging -- prisma deploy",
    "predeploy:koa": "node scripts/up.js && npm run build",
    "deploy:koa": "up deploy production",
    "docker": "docker-compose -f prisma/docker-compose.yml up -d",
    "generate:schema": "graphql get-schema --project database",
    "generate:types": "graphql prepare",
    "generate": "npm run generate:schema && npm run generate:types"
  },
  "author": "Ruben Buitelaar <rubenbuitelaar@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "apollo-link": "^1.2.2",
    "apollo-server-koa": "^1.3.6",
    "dotenv": "^5.0.1",
    "graphql": "^0.13.2",
    "graphql-import": "^0.5.2",
    "graphql-tools": "^3.0.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa2-cors": "^2.0.5",
    "prisma-binding": "^1.5.19"
  },
  "devDependencies": {
    "@types/graphql": "^0.13.1",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/koa2-cors": "^2.0.1",
    "dotenv-cli": "^1.4.0",
    "graphql-cli": "^2.16.0",
    "nodemon": "^1.17.4",
    "prettier": "^1.12.1",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
